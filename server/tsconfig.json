{
  "compilerOptions": {
    "module": "CommonJS",
    "lib": ["esnext"],
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@db/*": ["./db/*"],
      "@middleware/*": ["./middleware/*"],
      "@routes/*": ["./routes/*"],
      "@utils/*": ["./utils/*"]
    }
  },
  "include": ["src"]
}
